[hub]
  protocol = https
  host = github.gds
  
[user]
  name = Dafydd Vaughan
  email = [redacted]

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[alias]
  br = branch
  cb = checkout -b
  ci = commit
  co = checkout
  lg = log --pretty=oneline --topo-order --graph --abbrev-commit --decorate
  pr = pull --rebase
  st = status

[credential]
  helper = /opt/boxen/bin/boxen-git-credential

[core]
  excludesfile = /opt/boxen/config/git/gitignore

[push]
  default = simple
